generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model user {
  user_id  Int           @id @default(autoincrement())
  username String
  password String
  pokemons UserPokemon[] // Relation zu Pokemon 체ber die Kreuztabelle
}

model Pokemon {
  id      Int           @id @default(autoincrement())
  name    String
  number  Int
  type    String
  attacks String
  users   UserPokemon[] // Relation zu User 체ber die Kreuztabelle
}

model UserPokemon {
  user_id    Int
  pokemon_id Int
  user       user    @relation(fields: [user_id], references: [user_id])
  pokemon    Pokemon @relation(fields: [pokemon_id], references: [id])

  @@id([user_id, pokemon_id]) // Komposite Prim채rschl체ssel, der die Kombination der beiden IDs eindeutig macht
}
